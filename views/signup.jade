extends main-tiny
block title
	title User Signup

block subtitle
	h3.text-muted Sing Up

block content
	div.row.marketing

		form.form-horizontal(role="form", method="POST")

			div.form-group
				label.col-sm-2.control-label(for="username") Username
				div.col-sm-5
					input.form-control(type="text" id="username" name="username")
			div.form-group
				label.col-sm-2.control-label(for="password") Password
				div.col-sm-5
					input.form-control(type="password" id="password" name="password")
			div.form-group
				label.col-sm-2.control-label(for="email") Email
				div.col-sm-5
					input.form-control(type="email" id="email" name="email")

			div.form-group
				div.col-sm-offset-2.col-sm-10
					input.btn.btn-default(type="submit" value="Register")

		- if (msg)
			div.alert.alert-danger(role="alert") #{msg}
