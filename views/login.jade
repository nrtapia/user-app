extends main-tiny
block title
	title User Login

block subtitle
	h3.text-muted Login

block content
	div.row.marketing

		form.form-horizontal(role="form", method="POST")
			div.form-group
				label.col-sm-2.control-label(for="username") Username
				div.col-sm-5
					input.form-control(type="text" id="username" name="username")
			div.form-group
				label.col-sm-2.control-label(for="password") Password
				div.col-sm-5
					input.form-control(type="password" id="password" name="password")

			div.form-group
				div.col-sm-offset-2.col-sm-10
					button.btn.btn-default(type="submit") Login		
					= ' '			
					a.btn.btn-primary(href="/signup") Sign Up

		- if (msg)
			div.alert.alert-danger(role="alert") #{msg}  

		